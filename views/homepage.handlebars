<div class="card">
    <h2>Welcome! Create a post or view and edit your existing posts.</h2>

    <p><a class="createNewPost" href="/create">Create New Post</a></p>

    <div id="accordion">
        {{#each posts as |Post|}}
        <div class="text-center">
            <h2>{{post.title}}</h2>
            <p>{{{post.body}}}</p>
            <p>Created by {{post.user.email}} on {{format_date date_created}}</p>
        </div>
    </div>